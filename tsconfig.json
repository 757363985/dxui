{
  "compilerOptions": {
    "target": "esnext",
    // "target": "es2016",
    "module": "esnext",
    // "module": "commonjs",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": ["webpack-env"],
    "paths": {
      "@/*": ["src/*"]
    },
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationDir": "./dxui",            
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"]
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.vue", "tests/**/*.ts", "tests/**/*.tsx"],
  // "include": ["src/**/*.vue"],
  "exclude": ["node_modules","**/animation.js"]
}
